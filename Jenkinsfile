pipiline {
  agent any

  stages {
    stage("build") {
      steps {
        sh '''
          echo "Building...."
          echo "Please wait!"
        '''
        
      }

    }

    stage("test") {
      steps {
        sh '''
          echo "Testing...."
          echo "Please wait!"
        '''
        
      }

    }

    stage("deploy") {
      steps {
        sh '''
          echo "Deploying...."
          echo "Please wait!"
        '''
        
      }

    }

  }

}
